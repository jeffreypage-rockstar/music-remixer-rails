@import "bootstrap/variables";

@mixin track-media($image_size, $image_sm_size) {
  .track.media {
    background-color: #ffffff;
    border: thin solid #ededed;
    padding-bottom: 10px;
    border-radius: 3px;
    -webkit-box-shadow: 0 4px 4px -2px #dcdcdc;
    -moz-box-shadow: 0 4px 4px -2px #dcdcdc;
    box-shadow: 0 4px 4px -2px #dcdcdc;

    .by-artist {
      color: #9f9f9f;
      font-size: 14px;
      @media screen and (max-width: $screen-xs-max) {
        margin-top: -7px;
      }
    }

    .media-left {
      position: relative;
      padding-right: 0px;
      .image {
        width: $image_size;
        height: $image_size;

        @media screen and (max-width: $screen-sm-min) {
          width: $image_sm_size;
          height: $image_sm_size;
        }
      }
      .play, .pause {
        position: absolute;
        top: ($image_size - 50px) / 2;
        left: ($image_size - 50px) / 2;
        cursor: pointer;

        @media screen and (max-width: $screen-sm-min) {
          top: ($image_sm_size - 50px) / 2;
          left: ($image_sm_size - 50px) / 2;
        }
      }
      @media screen and (min-width: 321px) and (max-width: $screen-sm-min) {
        display:block;
        .wrapper {
          display: block;
          margin: 0 auto;
          width: $image_sm_size;
          position: relative;
          margin-top: 5px;
        }
      }
    }

    .media-body {
      .media-content {
        padding: 10px 10px 5px 10px;
        position: relative;
        overflow: visible;
        @media screen and (max-width: $screen-xs-max) {
          padding: 5px 10px;
        }
        .actions {

          .tags {
            position: relative;
            .tag {
              padding: 5px 5px;
              height: 33px;
              background-color: #e8e9ea;
              margin-right: 7px;
              border-radius: 3px;
              color: #535b62;
              @media screen and (max-width: $screen-xs-max) {
                margin-right: 5px;
              }
            }
            .selected {
              color: white;
              background-color: #41c7ff;
            }
          }
        }

        .mix8-player {
          .jp-time-holder {
            width: 100%;
            font-size: 12px;
            color: #9f9f9f;

            .jp-current-time {
              display: inline;
              float: left;
            }

            .duration {
              display: inline;
              float: right;
            }
          }

          .jp-audio .jp-progress {
            height: 6px;
            background-color: #f4f4f4;
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            border-radius: 3px;

            .jp-seek-bar {
              height: 6px;
              -webkit-border-radius: 3px;
              -moz-border-radius: 3px;
              border-radius: 3px;
              cursor: pointer;

              .jp-play-bar {
                height: 6px;
                -webkit-border-radius: 3px;
                -moz-border-radius: 3px;
                border-radius: 3px;
                background-color: #41c7ff;
              }
            }
          }
        }
      }

      ul.nav-tabs {
        border: 0;
        margin-top: 8px;
        font-size: 13px;

        li {
          height: 36px;
          border: 1px solid #eee;
          border-radius: 3px;
          margin-left: 4px;

          a {
            padding: 4px;
          }
          a, .tab-caption {
            color: #c8ccce;
            text-align: center;

            img {
              vertical-align: top;
              margin-top: 5px;
              margin-right: 2px;
            }
          }
          a:hover {
            background: transparent;
            border-color: transparent;
          }
          .tab-caption {
            margin-top: 10px;
          }

          .like-unlike-song {
            text-align: center;
            margin-top: 10px;
            i {
              margin-right: 5px;
            }
          }

          .count {
            display: inline-block;
            vertical-align: top;
          }
          img.mixes-image-tag {
            margin-top:3px;
          }
        }
        li:hover {
          background-color: #eee;
        }
        li:first-child {
          margin-right: 4px;
        }
        li.active {
          a {
            color: #41c7ff;
            border-color: transparent;
            background-color: transparent;
            img.comments-image-tag {
              content: url(<%= asset_path 'profile/comments-tab-h.png' %>);
            }
            img.mixes-image-tag {
              content: url(<%= asset_path 'profile/mixes-tab-h.png' %>);
              margin-top:3px;
            }
          }
        }
      }
    }
  }
  .tab-content {
    margin: 14px 14px 0 14px;
  }

  .fa-heart, .fa-heart-o {
    font-size: 18px;
    padding-top: 4px;
    margin-right: 4px;
  }
  .fa-heart {
    color: #41c7ff;
  }
}