doctype html
html
  head
    title
      = content_for?(:title) ? "#{content_for(:title)} | " : ""
    meta charset="utf-8" /
    css:
      body {
        display: block;
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        font-style: normal;
        font-variant: normal;
        line-height: 16px;
        background-color: #dbdbdb;
        letter-spacing: 0.01em;
        -webkit-font-smoothing: antialiased;
      }

      .main-container {
        margin: auto;
        max-width: 700px;
        height: auto;
      }

      #post-header {
        text-align: center;
        font-size: 12px;
        font-weight: 200;
      }

      a {
        color: #2888fe;
        text-decoration: none;
      }

      #body-header {
        background-color: #24292d;
        border-radius: 7px;

      }

      .logo {
        padding-left: 20px;
        padding-bottom: 5px;
        padding-top: 5px;

      }

      .body-mesage {
        background-color: white;
        padding-bottom: 5px;
        padding-top: 10px;
        padding-left: 20px;
        padding-right: 30px;

      }

      .message {
        padding-left: 10px;
        padding-top: 20px;
        text-align: left;
        font-weight: 300;
        font-size: 13px;
        padding-bottom: 30px;
        -webkit-font-smoothing: antialiased;
      }

      .footer {
        padding-left: 30px;
        padding-bottom: 15px;
        padding-top: 15px;
        font-size: 12px;
        font-weight: 200;

      }

      .msg-bold {
        font-weight: 500;
        font-size: 13px;
      }

      .msg-italic {
        font-style: italic;
      }

      .line {
        border-bottom: 1px solid black;
        width: 70%;
        height: 20px;
        margin: auto;

      }

      .banner {
        background-color: #414a51;
        height: auto;
        width: 100%;
      }

      .banner-text {
        width: 60%;
        background-color: #414a51;
        height: auto;
        float: left;
        display: inline-block;
        padding-left: 50px;
        padding-top: 70px;
        color: white;
        font-size: 32px;
        font-weight: 200;
        line-height: 25px;
      }

      .banner-img {
        width: 30%;
        background-color: #414a51;
        height: auto;
        margin-top: 30px;
        display: inline-block;
      }

      @media screen and (max-width: 530px) {
        .banner-img {
          width: auto;
          background-color: #414a51;
          height: auto;
          margin-top: 30px;
          display: inline-block;
          padding-left: 33%;
        }

        .banner-text {

          padding-top: 35px;
          color: white;
          font-size: 28px;
          font-weight: 200;
          line-height: 25px;
          text-align: center;
          width: 75%;
        }
      }

      .btndiv {
        width: 50%;
        height: 20px;
        margin: auto;
      }

      .btn {
        border: 0px;
        -webkit-border-radius: 7px;
        -moz-border-radius: 7px;
        border-radius: 7px;
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        color: #ffffff;
        font-size: 13px;
        background: #40c6ff;
        padding: 10px 20px 10px 20px;
        text-decoration: none;
        font-weight: 200;
      }

      .btn:hover {
        background: #3cb0fd;
        text-decoration: none;
      }

      .text-center {
        text-align: center;
      }

  body
    .main-container
      #post-header
        | If you can't read this email, please
        a href="#"  view online
      br
      header
        #body-header
          .logo
            = image_tag 'http://www.8stem.com/images/logo-blue.png'
          .banner
            .banner-text Making Music Interactive
            .banner-img
              = image_tag 'http://www.8stem.com/images/phone.png', width: 130
          .body-mesage
            .message
              = yield
          .footer
            = link_to 'Unsubscribe', mailkick_unsubscribe_url
      br
      #post-header
