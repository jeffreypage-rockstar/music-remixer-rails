<!-- Clips Segment Area Start -->
<div class="tracker-info">
    <% @song.clip_types.each_with_index do |clip_type, r| %>
        <% r += 1 %>
        <% if r == 5 %>
        <h6 id="level-blank">&nbsp</h6>
        <% end %>
        <h6 id="level-<%=r%>" data-id="<%= clip_type.id %>" class="<%='editable-text' if r >= 5%>"><span><%=clip_type.name%></span></h6>
    <% end %>
</div>
<% @song.parts.each_with_index do |part, c| %>
    <% c += 1 %>
    <div id="clips-<%=c%>" class="tracker-part part<%=c%> clips<%=' focus' if c == @currentIndex %>" data-column="<%=c%>">
        <div class="part-play-btn disabled"></div>
        <% part.clips.each_with_index do |clip, r| %>
            <% r += 1 %>
            <% if r == 5 %>
                <div class="blank">
                    <div class="play-btn"></div>
                </div>
            <% end %>
            <div id="clip-part-<%=c%><%=r%>" class="mixer-part clip clipstyle clip-<%=r%><%=' muted' if clip.state%>" 
				data-id="<%=clip.id%>" data-row="<%=r%>" data-db-row="<%=r%>" data-path="<%=clip.file%>" 
				data-state1="<%=clip.state%>" data-state2="<%=clip.state2%>" data-state3="<%=clip.state3%>" 
				data-filetype="<%=clip.wing%>" data-user-content="<%=clip.allow_ugc%>">
                <div class="progress"></div>
                <div class="opaque-gray"></div>
                <div class="play-btn"></div>
                <% if clip.allow_ugc %>
                <div class="user-content">0</div>
                <% end %>
            </div>
        <% end %>
        <div class="level column editable-text" data-id="<%=part.id%>" data-name="<%=part.name%>" data-time="<%= Time.at(part.duration).utc.strftime("%M:%S") %>">
            <span><%=part.name%></span>
        </div>
    </div>
<% end %>
<script type="text/javascript">
$('.editable-text').on('click', 
                       'span', 
                       function(e) {
                        var topparent = $($(e.target).parent());
                            $($(e.target).parent()).html('<input type="text" data-originalvalue="' + $(e.target).text() + '" value="' + $(e.target).text() + '">')
