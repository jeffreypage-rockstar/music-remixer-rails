<div class="row pull-right" style="position: absolute; right: -12px;bottom: -25px;">
    <div class="btn-group" role="group">
        <a data-remote="true" href="/songs/<%=@song.id%>/configure?configuration=style-up" class="btn btn-primary loading configuration<%=' disabled' if @configuration == 'style-up'%>" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Loading">
            <span>Style</span>
            <i class="fa fa-chevron-circle-up"></i>
        </a>
        <a data-remote="true" href="/songs/<%=@song.id%>/configure?configuration=source" class="btn btn-primary loading configuration<%=' disabled' if @configuration == 'source'%>" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Loading">
            <span>Source</span>
        </a>
        <a data-remote="true" href="/songs/<%=@song.id%>/configure?configuration=style-down" class="btn btn-primary loading configuration<%=' disabled' if @configuration == 'style-down'%>" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Loading">
            <span>Style</span>
            <i class="fa fa-chevron-circle-down"></i>
        </a>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $(".configuration").on('click', function(event){
            // event.stopPropagation();
            // event.preventDefault();
            // $(event.target).button('loading');
            $(".configuration").removeClass("disabled");
            $(event.target).addClass("disabled");
            window.configuration = $(event.target).attr('href').split("=")[1];
            
            reInitializeClipsState();
            updatePreview();
            
            $(".configbtn > div").removeClass('active');
            $(".configbtn > ."+window.configuration).addClass('active');
            
            window.configurationBtn = this;
        });
    });
</script>